<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Material.MatUnitPriceTable">

    <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="40.0" text="原料单价" textAlignment="CENTER" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
        <font>
            <Font size="24.0" />
        </font>
    </Label>
    <HBox spacing="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="60">
        <ImageView fx:id="searchImageView" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true" HBox.hgrow="ALWAYS" />
        <TextField fx:id="searchBarTextField" styleClass="search-text-field" stylesheets="@stylesheet.css" HBox.hgrow="ALWAYS">
            <font>
                <Font size="25.0" />
            </font>
        </TextField>
    </HBox>
    <TableView fx:id="matTable" styleClass="table-row-cell" stylesheets="@stylesheet.css" AnchorPane.bottomAnchor="120" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="120">

    </TableView>
    <HBox fx:id="matInfoHBox" alignment="CENTER" prefHeight="55.0" spacing="10.0" AnchorPane.bottomAnchor="55.0" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
        <Label contentDisplay="CENTER" maxWidth="-Infinity" prefHeight="40.0" text="原料名称" textAlignment="CENTER">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <TextField fx:id="matNameTextField" />
        <Label contentDisplay="CENTER" maxWidth="-Infinity" prefHeight="40.0" text="原料单价" textAlignment="CENTER">
        <font>
            <Font size="18.0" />
        </font>
    </Label>
        <TextField fx:id="matPriceTextField" />
        <Label contentDisplay="CENTER" maxWidth="-Infinity" prefHeight="40.0" text="备注" textAlignment="CENTER">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <TextField fx:id="matNoteTextField" />
        <Button fx:id="addMatButton" alignment="CENTER_RIGHT" mnemonicParsing="false" text="添加" styleClass="actionButtons"
                textAlignment="RIGHT">
            <font>
                <Font size="18.0" />
            </font>
        </Button>
    </HBox>
    <HBox alignment="CENTER_RIGHT" prefHeight="35.0" prefWidth="421.0" spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
        <Button fx:id="cancelButton" alignment="CENTER_RIGHT" mnemonicParsing="false" text="关闭窗口" styleClass="actionButtons"
                textAlignment="RIGHT">
            <font>
                <Font size="18.0" />
            </font>
        </Button>
    </HBox>
</AnchorPane>
