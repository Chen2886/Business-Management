<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import com.jfoenix.controls.JFXScrollPane?>
<?import javafx.scene.image.ImageView?>
<HBox prefHeight="950.0" prefWidth="1650.0" spacing="0" styleClass="parent" xmlns="http://javafx.com/javafx/10.0.2-internal"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="Material.MatAddOrder">
   <ScrollPane fx:id="scrollPane" minWidth="500" fitToWidth="true" >
      <VBox fx:id="infoInputVBox" alignment="CENTER_LEFT" spacing="30.0" maxWidth="Infinity"
            style="-fx-background-color: #2e2e2e" HBox.hgrow="ALWAYS">
         <HBox fx:id="buttonAndTitleHbox" spacing="20" >
            <ImageView fx:id="backButton" fitHeight="50" fitWidth="50" pickOnBounds="true" preserveRatio="true" />
            <Label fx:id="matAddOrderTitleLabel" alignment="CENTER" contentDisplay="CENTER" text="添加订单"
                   textAlignment="CENTER" style="-fx-text-fill: white">
               <font>
                  <Font size="30.0"/>
               </font>
            </Label>
            <padding>
               <Insets left="25" right="25" top="25"/>
            </padding>
         </HBox>
         <HBox alignment="CENTER" prefHeight="-Infinity" prefWidth="-Infinity"
               spacing="10.0">
            <padding>
               <Insets left="25" right="25" bottom="25"/>
            </padding>
            <Button fx:id="matAddOrderContinueButton" alignment="CENTER" mnemonicParsing="false" HBox.hgrow="ALWAYS"
                    styleClass="bw-button" text="添加" textAlignment="CENTER" maxWidth="Infinity">
               <font>
                  <Font size="18.0"/>
               </font>
            </Button>
         </HBox>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
         </padding>
      </VBox>
   </ScrollPane>
   <TableView fx:id="matTableView" maxWidth="Infinity" >
      <columns>

      </columns>
   </TableView>
</HBox>
